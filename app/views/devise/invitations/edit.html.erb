<h2><%= t "devise.invitations.edit.header" %></h2>

<%= error_messages_for @user %>
<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |form| %>
  <%= form.error_notification %>
  <%= form.hidden_field :invitation_token %>

  <div class="form-inputs">
    <%= form.input :login, label: 'Username' %>
    <%= form.input :password %>
    <%= form.input :password_confirmation %>
  </div>

  <div class="card-footer text-centered">
    <%= form.button :submit, t("devise.invitations.edit.submit_button"), class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
