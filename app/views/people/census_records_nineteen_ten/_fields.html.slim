- prepare_blanks_for_1910_census(form.object)

= hidden_field_tag 'census_record[owned_or_rented]', nil, id: 'chf1'
= hidden_field_tag 'census_record[farm_or_house]', nil, id: 'chf2'
= hidden_field_tag 'census_record[mortgage]', nil, id: 'chf3'
= hidden_field_tag 'census_record[naturalized_alien]', nil, id: 'chf5'

.census-hint-wrapper style="display: none"
  .census-hint
- content_for :extra_buttons do
  button.btn.btn-default.float-right.hint-toggle-btn type="button"

.card.mb-1
  .card-header
    | Census Record

  .card-body
    .census-slider-wrapper
      .census-slider.hidden
        = form.input :last_name,
                input_html: { autocomplete: 'new-password' },
                hint: name_hint

        = form.input :first_name,
                input_html: { autocomplete: 'new-password' },
                hint: name_hint

        = form.input :middle_name,
                input_html: { autocomplete: 'new-password' },
                hint: name_hint

        = form.input :name_prefix,
                input_html: { autocomplete: 'new-password' },
                hint: name_prefix_hint

        = form.input :name_suffix,
                input_html: { autocomplete: 'new-password' },
                hint: name_suffix_hint

        = form.input :relation_to_head,
                input_html: { autocomplete: 'new-password' },
                hint: relation_to_head_hint

        = form.input :sex,
                as: :radio_buttons,
                collection: Census1910Record.sex_choices,
                coded: true,
                hint: sex_hint

        = form.input :race,
                as: :radio_buttons,
                collection: Census1910Record.race_choices,
                coded: true,
                hint: race_hint

        = form.input :age,
                hint: age_hint

        = form.input :age_months,
                hint: age_months_hint

        = form.input :marital_status,
                as: :radio_buttons,
                collection: Census1910Record.marital_status_choices,
                coded: true,
                hint: marital_status_hint

        = form.input :years_married,
                as: :integer,
                input_html: { min: 0 },
                hint: years_married_hint

        = form.input :num_children_born,
                as: :integer,
                input_html: { min: 0 },
                hint: num_children_born_hint

        = form.input :num_children_alive,
                as: :integer,
                input_html: { min: 0 },
                hint: num_children_alive_hint

        = form.input :pob,
                input_html: {autocomplete: 'new-password'},
                hint: pob_1910_hint(12)

        = form.input :mother_tongue,
                input_html: {autocomplete: 'new-password'},
                hint: mother_tongue_1910_hint(12)

        = form.input :pob_father,
                input_html: {autocomplete: 'new-password'},
                hint: pob_1910_hint(13)

        = form.input :mother_tongue_father,
                input_html: {autocomplete: 'new-password'},
                hint: mother_tongue_1910_hint(13)

        = form.input :pob_mother,
                input_html: {autocomplete: 'new-password'},
                hint: pob_1910_hint(14)

        = form.input :mother_tongue_mother,
                input_html: {autocomplete: 'new-password'},
                hint: mother_tongue_1910_hint(14)

        = form.input :foreign_born,
                as: :boolean,
                label: 'This person is foreign born.',
                inline_label: 'Yes',
                hint: foreign_born_1910_hint

        = form.input :year_immigrated,
                as: :integer,
                hint: year_immigrated_hint

        = form.input :naturalized_alien,
                as: :radio_buttons,
                collection: Census1910Record.naturalized_alien_choices,
                coded: true,
                hint: naturalization_hint

        = form.input :language_spoken,
                hint: language_spoken_hint

        = form.input :profession,
                hint: profession_hint,
                input_html: { autocomplete: 'new-password' }

        = form.input :industry,
                input_html: { autocomplete: 'new-password' },
                hint: industry_hint

        = form.input :employment,
                as: :radio_buttons,
                collection: Census1910Record.employment_choices,
                coded: true,
                hint: employment_hint

        = form.input :unemployed,
                as: :boolean,
                label: 'Without work?',
                inline_label: 'Yes',
                hint: boolean_hint(21)

        = form.input :unemployed_weeks_1909,
                hint: unemployed_weeks_hint

        = form.input :can_read,
                as: :boolean,
                label: 'Read',
                inline_label: 'Yes',
                hint: boolean_hint(23)

        = form.input :can_write,
                as: :boolean,
                label: 'Write',
                inline_label: 'Yes',
                hint: boolean_hint(24)

        = form.input :attended_school,
                as: :boolean,
                label: 'Attended School',
                inline_label: 'Yes',
                hint: boolean_hint(25)

        = form.input :owned_or_rented,
                as: :radio_buttons,
                collection: Census1910Record.owned_or_rented_choices,
                coded: true,
                hint: owned_or_rented_hint

        = form.input :mortgage,
                as: :radio_buttons,
                collection: Census1910Record.mortgage_choices,
                coded: true,
                hint: owned_or_rented_hint(27)

        = form.input :farm_or_house,
                as: :radio_buttons,
                collection: Census1910Record.farm_or_house_choices,
                coded: true,
                hint: owned_or_rented_hint(28)

        = form.input :num_farm_sched,
                as: :integer,
                hint: num_farm_sched_hint

        = form.input :civil_war_vet,
                as: :radio_buttons,
                label: 'Civil War',
                collection: Census1910Record.civil_war_vet_choices,
                coded: true,
                hint: civil_war_hint

        = form.input :blind,
                as: :boolean,
                label: 'Blind',
                inline_label: 'Yes',
                hint: boolean_hint(31)

        = form.input :deaf_dumb,
                as: :boolean,
                label: 'Deaf and Dumb',
                inline_label: 'Yes',
                hint: boolean_hint(32)
